{
    "key": "group_about_page",
    "title": "About Page Content",
    "fields": [
        {
            "key": "field_team_title",
            "label": "Team: Title",
            "name": "team_title",
            "type": "text",
            "default_value": "The People Behind Balanz",
            "placeholder": "The People Behind Balanz"
        },
        {
            "key": "field_team_description",
            "label": "Team: Description",
            "name": "team_description",
            "type": "textarea",
            "rows": 3,
            "default_value": "A team of chefs, nutrition specialists, and operators working together every day to deliver balanced, thoughtful, and reliable meals."
        },
        {
            "key": "field_team_members",
            "label": "Team: Members",
            "name": "team_members",
            "type": "repeater",
            "instructions": "Add team members (recommended: 5 items)",
            "layout": "block",
            "button_label": "Add Team Member",
            "sub_fields": [
                {
                    "key": "field_member_name",
                    "label": "Name",
                    "name": "name",
                    "type": "text",
                    "placeholder": "Robert Fox"
                },
                {
                    "key": "field_member_role",
                    "label": "Role/Position",
                    "name": "role",
                    "type": "text",
                    "placeholder": "Head Chef"
                },
                {
                    "key": "field_member_avatar",
                    "label": "Avatar",
                    "name": "avatar",
                    "type": "image",
                    "return_format": "array",
                    "preview_size": "thumbnail"
                },
                {
                    "key": "field_member_quote",
                    "label": "Quote",
                    "name": "quote",
                    "type": "text",
                    "placeholder": "Good food isn't enough â€” it should make you feel good every day."
                },
                {
                    "key": "field_member_bio",
                    "label": "Bio",
                    "name": "bio",
                    "type": "textarea",
                    "rows": 3
                },
                {
                    "key": "field_member_whatsapp",
                    "label": "WhatsApp URL",
                    "name": "whatsapp_url",
                    "type": "url",
                    "placeholder": "https://wa.me/..."
                },
                {
                    "key": "field_member_telegram",
                    "label": "Telegram URL",
                    "name": "telegram_url",
                    "type": "url",
                    "placeholder": "https://t.me/..."
                },
                {
                    "key": "field_member_linkedin",
                    "label": "LinkedIn URL",
                    "name": "linkedin_url",
                    "type": "url",
                    "placeholder": "https://linkedin.com/in/..."
                }
            ]
        },
        {
            "key": "field_faq_title",
            "label": "FAQ: Title",
            "name": "faq_title",
            "type": "text",
            "default_value": "Frequently Asked Questions",
            "placeholder": "Frequently Asked Questions"
        },
        {
            "key": "field_faq_description",
            "label": "FAQ: Description",
            "name": "faq_description",
            "type": "textarea",
            "rows": 3
        },
        {
            "key": "field_faq_image",
            "label": "FAQ: Background Image",
            "name": "faq_image",
            "type": "image",
            "return_format": "array",
            "preview_size": "medium"
        },
        {
            "key": "field_faq_items",
            "label": "FAQ: Questions & Answers",
            "name": "faq_items",
            "type": "repeater",
            "instructions": "Add frequently asked questions",
            "layout": "block",
            "button_label": "Add FAQ Item",
            "sub_fields": [
                {
                    "key": "field_faq_question",
                    "label": "Question",
                    "name": "question",
                    "type": "text",
                    "placeholder": "Will it be varied?"
                },
                {
                    "key": "field_faq_answer",
                    "label": "Answer",
                    "name": "answer",
                    "type": "textarea",
                    "rows": 3,
                    "placeholder": "Yes, the menu changes daily..."
                }
            ]
        }
    ],
    "location": [
        [
            {
                "param": "page_template",
                "operator": "==",
                "value": "page-about-us.php"
            }
        ]
    ],
    "menu_order": 0,
    "position": "normal",
    "style": "default",
    "label_placement": "top",
    "instruction_placement": "label",
    "active": true
}
