{
    "key": "group_general_content",
    "title": "General Content",
    "fields": [
        {
            "key": "field_site_logo",
            "label": "Site Logo (Main)",
            "name": "site_logo",
            "type": "image",
            "instructions": "Main logo for header (default: logo.svg)",
            "return_format": "array",
            "preview_size": "medium",
            "library": "all"
        },
        {
            "key": "field_site_logo_secondary",
            "label": "Site Logo (Secondary)",
            "name": "site_logo_secondary",
            "type": "image",
            "instructions": "Secondary logo for header (default: logo-02.svg)",
            "return_format": "array",
            "preview_size": "medium",
            "library": "all"
        },
        {
            "key": "field_footer_logo",
            "label": "Footer Logo",
            "name": "footer_logo",
            "type": "image",
            "instructions": "Logo for footer",
            "return_format": "array",
            "preview_size": "medium",
            "library": "all"
        },
        {
            "key": "field_site_favicon",
            "label": "Site Favicon",
            "name": "site_favicon",
            "type": "image",
            "instructions": "Favicon for browser tab",
            "return_format": "array",
            "preview_size": "thumbnail",
            "library": "all"
        },
        {
            "key": "field_nav_home_text",
            "label": "Navigation: Home Text",
            "name": "nav_home_text",
            "type": "text",
            "default_value": "Home",
            "placeholder": "Home"
        },
        {
            "key": "field_nav_about_text",
            "label": "Navigation: About Text",
            "name": "nav_about_text",
            "type": "text",
            "default_value": "About Us",
            "placeholder": "About Us"
        },
        {
            "key": "field_download_button_text",
            "label": "Download Button Text",
            "name": "download_button_text",
            "type": "text",
            "default_value": "Download App",
            "placeholder": "Download App"
        },
        {
            "key": "field_download_link",
            "label": "Download Button Link",
            "name": "download_link",
            "type": "url",
            "instructions": "Link for the download button in header",
            "placeholder": "https://"
        },
        {
            "key": "field_footer_tagline",
            "label": "Footer Tagline",
            "name": "footer_tagline",
            "type": "text",
            "default_value": "Smart food for busy people who want to eat well",
            "placeholder": "Smart food for busy people who want to eat well"
        },
        {
            "key": "field_footer_download_title",
            "label": "Footer Download Title",
            "name": "footer_download_title",
            "type": "text",
            "default_value": "Download App on:",
            "placeholder": "Download App on:"
        },
        {
            "key": "field_footer_copyright",
            "label": "Footer Copyright Text",
            "name": "footer_copyright",
            "type": "textarea",
            "rows": 2,
            "new_lines": "br"
        }
    ],
    "location": [
        [
            {
                "param": "options_page",
                "operator": "==",
                "value": "acf-options-general-content"
            }
        ]
    ],
    "menu_order": 0,
    "position": "normal",
    "style": "default",
    "label_placement": "top",
    "instruction_placement": "label",
    "active": true
}
